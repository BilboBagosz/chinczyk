<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="pl.krgr.chinczyk.client.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="%perspective.name"
            class="pl.krgr.chinczyk.client.Perspective"
            id="chinczyk-klient.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="pl.krgr.chinczyk.client.presentation.PlayRoomsView"
            id="chinczyk-klient.playrooms.view"
            name="%RoomsView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="chinczyk-klient.playrooms.view"
               minimized="false"
               ratio="1.0"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="pl.krgr.chinczyk.client.presentation.ClientState">
         <variable
               name="pl.krgr.chinczyk.client.presentation.ClientState.connected"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:chinczyk-klient.playrooms.view">
         <command
               commandId="chinczyk-klient.startLocal"
               icon="icons/commands/run.gif"
               label="%NewGameLabel"
               style="push">
         </command>
         <command
               commandId="chinczyk-klient.addRoomCommand"
               icon="icons/commands/open_16.gif"
               label="Otwórz pokój"
               style="push">
         </command>
         <command
               commandId="chinczyk-klient.connectCommand"
               icon="icons/commands/connect.gif"
               label="%ConnectCommandLabel"
               style="push">
         </command>
         <command
               commandId="chinczyk-klient.disconnectCommand"
               icon="icons/commands/disconnect.gif"
               label="Rozłącz"
               style="push">
         </command>
         <command
               commandId="chinczyk-klient.joinRoomCommand"
               icon="icons/commands/join.png"
               label="Dołącz"
               style="push">
         </command>
         <command
               commandId="chinczyk-klient.standUp"
               icon="icons/commands/standup.gif"
               label="Wstań"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="chinczyk-klient.connectCommand"
            name="%ConnectCommandName">
      </command>
      <command
            id="chinczyk-klient.disconnectCommand"
            name="Rozłącz">
      </command>
      <command
            id="chinczyk-klient.startLocal"
            name="%StartLocalCommandName">
      </command>
      <command
            id="chinczyk-klient.addRoomCommand"
            name="Otwórz pokój">
      </command>
      <command
            id="chinczyk-klient.joinRoomCommand"
            name="Dołącz">
      </command>
      <command
            id="chinczyk-klient.standUp"
            name="Wstań">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="pl.krgr.chinczyk.client.handlers.ConnectCommandHandler"
            commandId="chinczyk-klient.connectCommand">
         <enabledWhen>
            <with
                  variable="pl.krgr.chinczyk.client.presentation.ClientState.connected">
               <equals
                     value="false">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="pl.krgr.chinczyk.client.handlers.DisconnectCommandHandler"
            commandId="chinczyk-klient.disconnectCommand">
         <enabledWhen>
            <with
                  variable="pl.krgr.chinczyk.client.presentation.ClientState.connected">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="pl.krgr.chinczyk.client.handlers.StartLocalCommandHandler"
            commandId="chinczyk-klient.startLocal">
      </handler>
      <handler
            class="pl.krgr.chinczyk.client.handlers.NewRoomHandler"
            commandId="chinczyk-klient.addRoomCommand">
         <enabledWhen>
            <with
                  variable="pl.krgr.chinczyk.client.presentation.ClientState.connected">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="pl.krgr.chinczyk.client.handlers.OpenRoomCommandHandler"
            commandId="chinczyk-klient.joinRoomCommand">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="pl.krgr.chinczyk.client.presentation.Room">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="pl.krgr.chinczyk.client.handlers.StandUpCommandHandler"
            commandId="chinczyk-klient.standUp">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <instanceof
                        value="pl.krgr.chinczyk.client.presentation.Room">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="pl.krgr.chinczyk.client.application"
            name="Chinczyk klient">
      </product>
   </extension>

</plugin>
